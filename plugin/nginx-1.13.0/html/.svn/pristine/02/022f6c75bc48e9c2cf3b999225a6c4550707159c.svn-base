<link rel="stylesheet" href="lib/ztree/demo.css" type="text/css">
<link rel="stylesheet" href="lib/ztree/zTreeStyle.css" type="text/css">
<script type="text/javascript" src="lib/ztree/jquery.ztree.core.js"></script>
<script type="text/javascript" src="lib/ztree/jquery.ztree.excheck.js"></script>
<style type="text/css">
    .app-content-body {
        margin-top: 0;
    }

    .bread-crumb {
        margin-top: -5px;
    }

    .wrapper-data {
        margin-top: 50px;
    }

    .se-content {
        position: relative;
        left: 350px;
        width: 400px;
    }

        .se-content label {
            position: absolute;
            left: 0;
            width: 110px;
            text-align: center;
        }

        .se-content select {
            position: absolute;
            left: 110px;
            vertical-align: middle;
            height: 40px;
        }
</style>
<!-- 导航条 -->
<div class="bg-white bread-crumb">
    <ul class="breadcrumb b-a m-b-n-xs lter b-b wrapper-md">
        <li><a><i class="fa fa-home">&nbsp;</i>组织生活</a></li>
        <li class="active"><a ui-sref="main.faults.list">党员身边事</a></li>
        <li class="active" ng-bind="title"></li>
    </ul>
</div>

<!-- 加载提醒 -->
<div ng-show="loading" class="text-center m-t-md text-lg"><i class="fa fa-spin fa-spinner"></i>数据加载中...</div>

<!-- 内容区域 -->
<div ng-hide="loading" class="wrapper-md content">
    <!-- 数据显示 -->
    <div class="wrapper-data">
        <div class="panel panel-default">
        

            <!-- 数据表格 -->
            <div class="row org-m-t20 m-l-none m-r-none">

                <div class="col-md-12">
                    <div class="table-responsive" style="width: 100%;">
                        <table class="table table-striped b-t b-light text-center">
                            <thead>
                                <tr>
                                    <th ng-click="sortData(url, '', param,$event)" class="sortable both">序号</th>
                                    <th ng-click="sortData(url, '', param,$event)" class="sortable both text-left">组织名称</th>
                                    <th ng-click="sortData(url, '', param,$event)" class="sortable both">负责人姓名</th>
                                    <th ng-click="sortData(url, '', param,$event)" class="sortable both">负责人电话</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in pageInfo.data">
                                    <td>{{ item.id}}</td>
                                    <td class="text-left">{{  item.deptName}} </td>
                                    <td>{{ item.userName }} </td>
                                    <td>{{ item.phone }}  </td>
                                    <td class="text-center">
                                        <button ng-if="!item.userName" class="btn btn-outline blue btn-xs m-r-10" ng-click="configMember('', item.deptId, '')">设置</button>
                                        <button ng-if="item.userName" class="btn btn-outline blue btn-xs m-r-10" ng-click="configMember(item.id, item.deptId, item.userId)">修改</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="height: 1px; overflow: hidden;">
    <div class="panel panel-default" id="memberLayer" style="padding: 10px">
        <div class="row org-m-t20 m-l-none m-r-none">
            <div class="input-group search-box col-sm-4">
                <input type="text" class="form-control" ng-model="member.keyword" placeholder="输入姓名、职务">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="getMemberList()"><i class="fa fa-search"></i></button>
                </span>
            </div>

            <div class="table-responsive org-m-t20">
                <table class="table table-striped b-t b-light text-center">
                    <tr ng-repeat="item in memberList">
                        <td>
                            <input type="radio" name="chooseMember" value="{{ item.userName }}" id="{{ item.id }}" ng-checked="item.checked">
                        </td>
                        <td>{{ item.userName }}</td>
                        <td>{{ item.dnzwText }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>


