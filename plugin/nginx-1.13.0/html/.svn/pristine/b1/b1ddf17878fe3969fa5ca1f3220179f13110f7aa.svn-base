				<div class="col-sm-10 col-sm-offset-1"><a class="btn btn-info btn-rounded btn-block" >
				投票{{ record.statusName }}</a></div>
        
        <h4 class="col-sm-10 col-sm-offset-1 m-t-md font16 text-lineheight-sm">{{record.title}}</h4>
				<div class="col-sm-10 col-sm-offset-1 font14">
					<span class="inline m-r">发布者 : {{record.deptName}}</span>
					<span class="inline">发布时间 : {{record.createTime}}</span>
				</div>
				<div class="col-sm-10 col-sm-offset-1 m-t-sm"><div class="gray-bg p-sm">{{record.remark}}</div></div>
				<div class="col-sm-10 col-sm-offset-1 m-t-md" style="font-size: 1.8rem; color: #93c90f;">投票{{ record.statusName }}, 投票人次：{{ record.answerUserCount }}</div>
				<div ng-repeat="item in record.answerData">
					<div class="col-sm-10 col-sm-offset-1 m-t-md m-b-md">
						<strong>{{$index+1}} &nbsp;. {{item.title}}</strong>
					</div> 

					<div class="col-sm-10 col-sm-offset-1" ng-if="item.optiontype == 1">
						<div class="radio row" ng-repeat="info in item.options" >
							<div ng-if="item.type==2" class="m-b-10">
								<img src="{{info.img}}" class="block" style="width: 150; height: 150px; margin-left:15px;"/> 
							</div>
							<div class="col-sm-10" ng-if="item.type!=3">
								<input type="radio" id="inlineRadio1" value="1" name="radioInline" style="margin:5px 0 0; margin-top: 2px;" disabled>
								<label for="inlineRadio1" class="text-lineheight1" style="cursor:default;">{{info.content}} </label>
							</div>
							<div class="col-sm-10" ng-if="item.type==3">
								<input type="radio" id="inlineRadio1" value="1" name="radioInline" style="margin:5px 0 0; margin-top: 2px;" disabled>
								<label for="inlineRadio1" class="text-lineheight1" style="cursor:default;">
									<a href="javascript:;">{{info.content}}</a>
								</label>
							</div>
							<div class="col-sm-2"><span class="inline ">{{info.count}} 票</span></div>
						</div> 
					</div>

					<div class="col-sm-10 col-sm-offset-1" ng-if="item.optiontype == 2">
						<div class="checkbox row" ng-repeat="info in item.options">
							<div ng-if="item.type==2" class="m-b-10">
								<img src="{{info.img}}" class="block" style="width: 150; height: 150px; margin-left:15px; "/> 
							</div>
							<div class="col-sm-10" ng-if="item.type!=3">
								<input type="checkbox" id="inlineCheckbox1" value="1" name="totem" style="margin:5px 0 0; margin-top:2px" disabled>
								<label for="inlineCheckbox1" class="text-lineheight1" style="cursor:default;">{{info.content}} </label>
							</div>
							<div class="col-sm-10" ng-if="item.type==3">
								<input type="checkbox" id="inlineCheckbox1" value="1" name="totem" style="margin:5px 0 0; margin-top:2px" disabled>
								<label for="inlineCheckbox1" class="text-lineheight1" style="cursor:default;">
									<a href="javascript:;">{{info.content}}</a>
							  </label>
							</div>
							<div class="col-sm-2"><span class="inline">{{info.count}} 票</span></div>
						</div> 
					</div>
