<toaster-container toaster-options="{'position-class': 'toast-center', 'close-button':true}"></toaster-container>

<div class="wrapper">
	<div>
		<ul class="breadcrumb">
      <li><a href="#">党务办公</a></li>
      <li class="active"><a  ui-sref="main.party.vote({typeId: typeId})" ng-bind="typeName"></a></li>
	  <li class="active" ng-bind="title"></li>
	  </ul>
	</div>
	
	<div class="org-m-t20 ">
