<script type="text/javascript" charset="utf-8" src="lib/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="lib/ueditor/ueditor.all.min.js"> </script>
<script type="text/javascript" charset="utf-8" src="lib/ueditor/lang/zh-cn/zh-cn.js"></script>
<style>
    #edui1_iframeholder {
        height: 300px !important;
    }

    #edui1 {
        z-index: 0!important;
    }
</style>
<!-- 导航条 -->
<div class="bg-white bread-crumb">
    <ul class="breadcrumb b-a m-b-n-xs lter b-b wrapper-md">
        <li><a><i class="fa fa-home">&nbsp;</i>组织生活</a></li>
        <li><a ui-sref="main.life.meeting">会议管理</a></li>
        <li class="active" ng-bind="title"></li>
    </ul>
</div>

<!-- 内容区域 -->
<div ng-hide="loading" class="wrapper-md content">
    <!-- 数据显示 -->
    <div class="wrapper-data">
        <div class="add-content white-bg">
            <!-- 详情时显示 -->
            <a ng-show="{{meetingInfo.allowEdit == 1}}" style="position: relative; z-index: 1000;" ui-sref="main.lifes.meetingUpdate({id: id})" class="btn btn-info pull-right m-l-xs" ng-show="hasUpdate">
                <i class="icon-user-follow m-r-sm text-md"></i>
                编辑
            </a>
            <a style="position: relative; z-index: 1000;" ng-click="export()" class="btn btn-info pull-right m-l-xs">
                导出
            </a>
            <!-- 详情时显示 END -->

            <form class="form-horizontal" name="organize_form">
                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">会议主题: </label>
                    <span ng-model="record.mname">{{ meetingInfo.mname }}</span>
                </div>
                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">发布组织: </label>
                    <span ng-model="record.username">{{ meetingInfo.deptname }}</span>
                </div>
                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">会议类型: </label>
                    <span ng-model="record.mtypeText">{{ meetingInfo.mtypeText }}</span>
                </div>
                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">开始时间: </label>
                    <span>{{  meetingInfo.startdate }} 
                    </span>
                </div>
                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">结束时间: </label>
                    <span>{{ meetingInfo.enddate}}</span>
                </div>
                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">会议地点: </label>
                    <span ng-model="record.mplace">{{ meetingInfo.mplace }}</span>
                </div>

                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">主持人: </label>
                    <span ng-model="record.masterPerson">{{ meetingInfo.masterPerson }}</span>
                </div>
                <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">记录人: </label>
                    <span ng-model="record.recordPerson">{{ meetingInfo.recordPerson }}</span>
                </div>

                <div class="form-group" style="height: 360px">
                    <label for="" class="col-lg-2 col-sm-3 p-r-20 w140 text-right">会议内容: </label>
                    <div class="col-sm-8">
                        <textarea id="myEditor" name="myEditor" rows="15" cols="80" style="width: 100%; height: 300px;" ></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="" class="col-sm-3 p-r-20 m-b-10 w140 text-right">列席人: </label>
                    <div class="col-sm-8">
                        {{ meetingInfo.listPersons }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="" class="col-sm-3 p-r-20 m-b-10 w140 text-right">出席人: </label>
                    <div class="col-sm-8">
                        <div class="form-group" style="height: 20px;" ng-repeat="item in personList">
                            <span class="col-xs-3 col-md-3 text-center" style="color: green;" ng-if="item.qdstatus == 1">已签</span>
                            <span class="col-xs-3 col-md-3 text-center" style="color: red;" ng-if="item.qdstatus == -1">未签</span>
                            <span class="col-xs-3 col-md-3 text-center" style="color: yellow;" ng-if="item.qdstatus == 2">迟到</span>
                            <span class="col-xs-3 col-md-3" ng-bind="item.username"></span>
                            <span class="col-xs-6 col-md-6" ng-bind="item.duty"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="" class="col-sm-3 p-r-20 m-b-10 w140 text-right">缺席人: </label>
                    <div class="col-sm-8" ng-bind-html="meetingInfo.notherepersons | trustHtml"></div>
                </div>

                <!-- <div class="form-group">
                    <label for="" class="p-r-20 m-b-10 w140 text-right">与会人员: </label>
                    <span>(共 {{ meetingInfo.allhere }} 人: 已签 {{ meetingInfo.hashere }} 人/未签{{ meetingInfo.nothere }}人 )
                    </span>
                    <a href="javascript:;" ng-click="showDetail()">查看签到详情</a>
                </div> -->

                <div class="form-group" ng-show="meetingInfo.missue">
                    <label class="col-lg-2 col-sm-3 control-label p-r-20 w140 text-right" for="">议定事项:</label>
                    <div class="col-sm-8">
                        <!-- <textarea class="form-control r-inline" id="missue" name="missue" rows="5" readonly ng-model="meetingInfo.missue"></textarea>
                        <span class="help-block m-b-none"></span> -->
                        <textarea id="missueEditor" name="missueEditor" rows="15" cols="80" style="width: 100%; height: 300px;" ></textarea>
                    </div>
                </div>
                <div class="form-group" ng-show="meetingInfo.remark">
                    <label class="col-lg-2 col-sm-3 control-label p-r-20 w140 text-right" for="">会议备注:</label>
                    <div class="col-sm-8">
                        <!-- <textarea class="form-control r-inline" id="remark" name="remark" rows="5" readonly ng-model="meetingInfo.remark"></textarea>
                        <span class="help-block m-b-none"></span> -->
                        <textarea id="remarkEditor" name="remarkEditor" rows="15" cols="80" style="width: 100%; height: 300px;" ></textarea>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="button" class="btn btn-default p-lr-20" ng-click="cancel()">返回</button>
                </div>
            </form>
        </div>
    </div>
</div>
