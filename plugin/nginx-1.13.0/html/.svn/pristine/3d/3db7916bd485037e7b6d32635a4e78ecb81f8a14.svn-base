<style>
	.panel-heading li {
		width: 15%;
	}
	.panel-heading li > a {
		height: 100px;
	}
	.padding {
		padding: 20px;
	}
	.h145 {
		height: 145px;
	}
	.wp80 {
		width: 80%;
	}
	.work-panel {
		width: 80%; margin: 0 auto; padding-top: 20px; padding-bottom: 20px;
	}
	.orange-color {
		color: #d49e39;
		background-color: #fbf5cb;
		border: 2px solid #fbcb00;
		border-radius: 5px;
	}
	.red-color {
		color: #ec4c47;
		background-color: #fcdcda;
		border: 1px solid #ec4d45;
		border-radius: 5px;
	}
