				$scope.$apply(function(){
					var obj = [{
						file:ev.target.result,
						filename:fileInfo2.name
					}];
					$.ajax({
						type: 'POST',
						url : 'http://118.190.172.83:8011/wx/djuploadFile',
						async: false,
						contentType:'application/json;charset=UTF-8',
						data:angular.toJson(obj)
					}).then(function(result){
