'use strict';

angular.module('app')
	.controller('memPartController', [ '$rootScope', '$scope', '$http', '$state','toaster','$timeout',
	  function($rootScope, $scope, $http, $state, toaster, $timeout) {

	  	$scope.userId = $state.params.id;
	  	$scope.record = {};
	  	$scope.btnInfo = '确定';
	  	$scope.btnState = false;
	  	$scope.title = '角色';

	  	// 获取选中CheckBox
	  	$scope.selected = [];
	  	var obj = {};
	  	obj.userId = $scope.userId;
	  	var m = []; // 参数数组

	  	getPart($scope.userId);

	  	function getPart(userId) {
	  		$.ajax({
	    		type: 'put',
					url : '/iBase4J-SYS-Web/user/partyner/role',
					dataType: 'json',
					contentType:'application/json;charset=UTF-8',
					data: angular.toJson({userid: userId})
				}).then(function (result) {
					if (result.httpCode == 200) {
						$scope.result = result.data.roleList;
						$scope.user = result.data.userName;
						$.each($scope.result, function (index, item) {
							if(item.isselected == 1) { 
								$scope.selected.push(item.id);
								var newObj = angular.copy(obj);
							  newObj.roleId = item.id;
							  m.push(newObj);
							}
						})
					} else {
						toaster.clear('*');
						toaster.pop('error', '', result.msg);
					}
					$scope.$apply();
				});
	  	}

	  	// 获取CheckBox值
	  	$scope.isSelected = function(id) {
	  		console.log($scope.selected)
	  		return $scope.selected.indexOf(id) >= 0;
	  	}

	  	$scope.updateSelection = function ($event, id) {
	  		var checkbox = $event.target;
	  		var action = checkbox.checked ? 'add' : 'remove';
	  		updateSelected(action, id);
	  	}

	  	var updateSelected = function (action, id) {
	  		if(action == 'add' && $scope.selected.indexOf(id) == -1){
		      $scope.selected.push(id);
		      var newObj = angular.copy(obj);
		      newObj.roleId = id;
		      m.push(newObj);
		    }
		    if(action == 'remove' && $scope.selected.indexOf(id)!=-1){
		      var idx = $scope.selected.indexOf(id);
		      $scope.selected.splice(idx,1);
		      m.splice(index, 1);
		    }
	  	}
	  	// 获取CheckBox值 end

	  	// 退出编辑
	  	$scope.cancel = function () {
	    	if (confirm('确定要退出吗？')) {
	    		history.go(-1);
    		  // $state.go('main.partyners.detail', {id: $scope.userId});
    		}
	    }

	    $scope.submit = function () {
	    	$scope.btnInfo = '提交中...';
		  	$scope.btnState = true;
	    	$.ajax({
	    		type: 'post',
	    		dataType: 'json',
					url : '/iBase4J-SYS-Web/user/update/role',
					contentType:'application/json;charset=UTF-8',
					data: angular.toJson(m)
				}).then(function (result) {
					if (result.httpCode == 200) {
						toaster.clear('*');
						toaster.pop('success', '', result.msg);
						$timeout(function () {
							history.go(-1);
			    		// $state.go('main.partyners.detail', {id: $scope.userId});
			    	}, 800);
					} else {
						toaster.clear('*');
						toaster.pop('error', '', result.msg);
					}
					$scope.btnInfo = '确定';
			  	$scope.btnState = false;
				});
	    }
	  }])